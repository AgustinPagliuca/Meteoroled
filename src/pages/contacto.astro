    font-weight: 600;
    margin-bottom: 4px;
    color: var(--text-dark);
  }

  .contact-method-info p {
    font-size: 0.9rem;
    color: var(--text-body);
    margin-bottom: 8px;
  }

  .contact-badge {
    display: inline-block;
    font-size: 0.7rem;
    padding: 4px 10px;
    background: var(--gradient-primary);
    border-radius: 20px;
    color: var(--white);
    font-weight: 500;
  }
  
  /* Contact Form */
  .contact-form-wrapper {
    background: var(--bg-card);
    padding: 40px;
    border-radius: var(--border-radius-lg);
