<style>
  /* Contact Section */
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 60px;
  }
  
  .contact-info h2 {
    font-size: clamp(1.75rem, 3vw, 2.25rem);
