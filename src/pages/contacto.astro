        e.preventDefault();
        
        const formData = new FormData(form);
        const nombre = formData.get('nombre');
        const telefono = formData.get('telefono');
        const email = formData.get('email');
        const tipoEvento = formData.get('tipoEvento');
        const fecha = formData.get('fecha');
        const pantalla = formData.get('pantalla');
        const mensaje = formData.get('mensaje');
        
        let text = `Hola! Mi nombre es ${nombre}.\n\n`;
        
        if (tipoEvento) text += `*Tipo de evento:* ${tipoEvento}\n`;
        if (fecha) text += `*Fecha:* ${fecha}\n`;
        if (pantalla) text += `*Pantalla de inter√©s:* ${pantalla}\n`;
        
        text += `\n*Mensaje:*\n${mensaje}\n\n`;
        text += `*Contacto:*\n`;
        text += `üì± ${telefono}\n`;
        if (email) text += `üìß ${email}`;
        
        const whatsappUrl = `https://wa.me/5491168050177?text=${encodeURIComponent(text)}`;
        window.open(whatsappUrl, '_blank');
      });
    }
  });
</script>
