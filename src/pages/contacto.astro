  .contact-form h3 {
    font-size: 1.5rem;
    margin-bottom: 30px;
    text-align: center;
    color: var(--text-dark);
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: var(--text-dark);
    font-size: 0.9rem;
  }

  .form-group input,
  .form-group select,
