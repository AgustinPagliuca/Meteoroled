    width: 100%;
    padding: 14px 16px;
    background: var(--bg-section);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    color: var(--text-dark);
    font-family: inherit;
    font-size: 1rem;
    transition: var(--transition);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(0, 82, 204, 0.15);
    background: var(--white);
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: var(--text-muted);
  }

  .form-group textarea {
    min-height: 120px;
    resize: vertical;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
  }

  .btn-block {
    width: 100%;
    justify-content: center;
  }

  .form-note {
    font-size: 0.8rem;
    color: var(--text-muted);
    text-align: center;
    margin-top: 16px;
  }
  
  /* Coverage Section */
  .coverage-section {
    background: linear-gradient(
      135deg,
      rgba(245, 247, 250, 0.4) 0%,
      rgba(235, 238, 242, 0.6) 50%,
      rgba(245, 247, 250, 0.4) 100%
    );
  }
  
  .coverage-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .coverage-content h2 {
    margin-bottom: 16px;
    color: var(--text-dark);
  }

  .coverage-content > p {
    color: var(--text-body);
    margin-bottom: 40px;
  }

  .coverage-areas {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 16px;
  }

  .coverage-area {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    background: var(--bg-card);
    border-radius: 30px;
    border: 1px solid var(--border-color);
    transition: var(--transition);
    box-shadow: var(--shadow-sm);
  }

  .coverage-area:hover {
    background: var(--primary);
    border-color: var(--primary);
    box-shadow: var(--shadow-md);
  }

  .coverage-area svg {
    color: var(--primary);
    flex-shrink: 0;
  }

  .coverage-area:hover svg {
    color: var(--white);
  }

  .coverage-area span {
    font-weight: 500;
    color: var(--text-dark);
  }

  .coverage-area:hover span {
    color: var(--white);
  }

  /* FAQ Section */
  .faq-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  .faq-item {
