---
import MainLayout from '../layouts/MainLayout.astro';
import PageHero from '../components/PageHero.astro';
import SectionHeader from '../components/SectionHeader.astro';
import CTASection from '../components/CTASection.astro';

const services = [
  {
    id: 'alquiler',
    title: 'Alquiler de Pantallas LED',
    description: 'Ofrecemos pantallas LED de última generación para todo tipo de eventos. Desde pequeñas reuniones corporativas hasta grandes festivales, tenemos la pantalla perfecta para vos.',
    image: '/Meteoroled/images/alquiler-pantallas-image.jpg',
    features: [
      'Pantallas de alta definición (P2.5, P3, P5, P10)',
      'Tamaños personalizables según tu evento',
      'Calidad de imagen profesional',
      'Brillo ajustable para interior y exterior',
      'Formatos: 16:9, 4:3 o personalizado'
    ]
  },
  {
    id: 'colocacion',
    title: 'Colocación Profesional',
    description: 'Nuestro equipo de técnicos se encarga de todo el proceso de instalación. Llegamos, montamos, configuramos y nos aseguramos de que todo funcione perfecto.',
    image: '/Meteoroled/images/image4.jpeg',
    features: [
      'Transporte incluido en AMBA',
      'Montaje y desmontaje profesional',
      'Estructuras y soportes incluidos',
      'Configuración de contenido',
      'Pruebas previas al evento'
    ]
  },
  {
    id: 'tecnico',
    title: 'Servicio Técnico 24/7',
    description: 'Brindamos soporte técnico continuo durante tu evento. Un operador puede quedarse presente para garantizar el funcionamiento óptimo de las pantallas.',
    image: '/Meteoroled/images/servicio-tecnico-image.jpg',
    features: [
      'Operador técnico durante el evento',
      'Soporte remoto disponible',
      'Equipos de respaldo',
      'Resolución inmediata de problemas',
      'Contacto directo por WhatsApp'
    ]
  }
];

const process = [
  { step: 1, title: 'Contacto', desc: 'Escribinos por WhatsApp contándonos sobre tu evento' },
  { step: 2, title: 'Cotización', desc: 'Te enviamos un presupuesto personalizado sin compromiso' },
  { step: 3, title: 'Confirmación', desc: 'Reservás la fecha con una seña del 50%' },
  { step: 4, title: 'Instalación', desc: 'Llegamos al lugar y montamos todo el equipo' },
  { step: 5, title: 'Tu Evento', desc: 'Disfrutá mientras nosotros nos encargamos de la tecnología' }
];
---

<MainLayout 
  title="Servicios"
  description="Servicios de alquiler, colocación y servicio técnico de pantallas LED para eventos. Calidad profesional garantizada en Buenos Aires."
  currentPage="servicios"
>
  <PageHero 
    title="Nuestros Servicios"
    subtitle="Soluciones completas en pantallas LED para cualquier tipo de evento"
  />

  <!-- Services Detail -->
  {services.map((service, index) => (
    <section id={service.id} class={`section service-detail ${index % 2 === 1 ? 'alt' : ''}`}>
      <div class="container">
        <div class="service-detail-grid">
          {index % 2 === 0 ? (
            <>
              <div class="service-detail-image slide-in-left">
                <img src={service.image} alt={service.title} loading="lazy" />
              </div>
              <div class="service-detail-content slide-in-right">
                <h2>{service.title}</h2>
                <p class="service-description">{service.description}</p>
                <ul class="service-features">
                  {service.features.map(feature => (
                    <li>
                      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
                <a href="https://wa.me/5491168050177?text=Hola!%20Quiero%20información%20sobre%20{encodeURIComponent(service.title)}" class="btn btn-primary" target="_blank" rel="noopener">
                  Consultar por este servicio
                </a>
              </div>
            </>
          ) : (
            <>
              <div class="service-detail-content slide-in-left">
                <h2>{service.title}</h2>
                <p class="service-description">{service.description}</p>
                <ul class="service-features">
                  {service.features.map(feature => (
                    <li>
                      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
                <a href="https://wa.me/5491168050177?text=Hola!%20Quiero%20información%20sobre%20{encodeURIComponent(service.title)}" class="btn btn-primary" target="_blank" rel="noopener">
                  Consultar por este servicio
                </a>
              </div>
              <div class="service-detail-image slide-in-right">
                <img src={service.image} alt={service.title} loading="lazy" />
              </div>
            </>
          )}
        </div>
      </div>
    </section>
  ))}

  <!-- Process Section -->
  <section class="section process-section">
    <div class="container">
      <SectionHeader 
        title="¿Cómo trabajamos?"
        subtitle="Un proceso simple y transparente"
      />
      
      <div class="process-timeline">
        {process.map((item) => (
          <div class="process-step fade-in">
            <div class="process-number">{item.step}</div>
            <div class="process-content">
              <h4>{item.title}</h4>
              <p>{item.desc}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CTASection 
    title="¿Tenés un evento en mente?"
    subtitle="Contanos tu idea y te asesoramos sin compromiso"
  />
</MainLayout>

<style>
  .service-detail {
    padding: var(--section-padding) 0;
  }
  
  .service-detail.alt {
    background: linear-gradient(
      135deg,
      rgba(245, 247, 250, 0.4) 0%,
      rgba(235, 238, 242, 0.6) 50%,
      rgba(245, 247, 250, 0.4) 100%
    );
  }
  
  .service-detail-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .service-detail-image {
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    width: 100%;
    height: 450px;
  }

  .service-detail-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }
  
  .service-detail-content h2 {
    margin-bottom: 20px;
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    color: var(--text-dark);
  }
  
  .service-description {
    font-size: 1.125rem;
    color: var(--text-muted);
    margin-bottom: 30px;
    line-height: 1.7;
  }
  
  .service-features {
    margin-bottom: 30px;
  }
  
  .service-features li {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 16px;
    color: var(--text-body);
  }
  
  .service-features svg {
    color: var(--primary);
    flex-shrink: 0;
    margin-top: 2px;
  }
  
  /* Process */
  .process-section {
    background: linear-gradient(
      135deg,
      rgba(245, 247, 250, 0.4) 0%,
      rgba(235, 238, 242, 0.6) 50%,
      rgba(245, 247, 250, 0.4) 100%
    );
  }
  
  .process-timeline {
    display: flex;
    justify-content: space-between;
    position: relative;
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .process-timeline::before {
    content: '';
    position: absolute;
    top: 30px;
    left: 40px;
    right: 40px;
    height: 2px;
    background: var(--border-color);
  }
  
  .process-step {
    text-align: center;
    position: relative;
    flex: 1;
  }
  
  .process-number {
    width: 60px;
    height: 60px;
    background: var(--gradient-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--white);
    margin: 0 auto 20px;
    position: relative;
    z-index: 1;
  }
  
  .process-content h4 {
    margin-bottom: 8px;
    color: var(--text-dark);
  }
  
  .process-content p {
    font-size: 0.9rem;
    color: var(--text-muted);
    max-width: 150px;
    margin: 0 auto;
  }
  
  @media (max-width: 1024px) {
    .service-detail-grid {
      grid-template-columns: 1fr;
      gap: 40px;
      display: flex;
      flex-direction: column;
    }

    .service-detail-image {
      height: 350px;
      order: 1;
    }

    .service-detail-content {
      order: 2;
      text-align: center;
    }

    .service-features {
      max-width: 400px;
      margin: 0 auto 30px;
    }

    .service-features li {
      text-align: left;
    }
  }

  @media (max-width: 768px) {
    .service-detail {
      overflow-x: hidden;
      padding: 40px 0;
    }

    .service-detail-grid {
      gap: 20px;
    }

    .service-detail-image {
      height: 250px;
    }

    .service-detail-content {
      padding: 0 20px;
    }

    .service-detail-content h2 {
      font-size: 1.5rem;
      margin-bottom: 12px;
    }

    .service-description {
      font-size: 1rem;
      margin-bottom: 20px;
    }

    .service-features {
      margin-bottom: 20px;
      margin-left: 20px;
    }

    .service-features li {
      margin-bottom: 10px;
      font-size: 0.9rem;
    }

    .process-timeline {
      flex-direction: column;
      gap: 30px;
    }

    .process-timeline::before {
      top: 0;
      bottom: 0;
      left: 30px;
      right: auto;
      width: 2px;
      height: auto;
    }

    .process-step {
      display: flex;
      align-items: flex-start;
      gap: 20px;
      text-align: left;
    }

    .process-number {
      margin: 0;
      flex-shrink: 0;
    }

    .process-content p {
      max-width: none;
      margin: 0;
    }
  }

  @media (max-width: 480px) {
    .service-detail-grid {
      gap: 20px;
    }

    .service-detail-image {
      height: 250px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Animaciones de slide
    const slideElements = document.querySelectorAll('.slide-in-left, .slide-in-right, .fade-in');

    const slideObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          slideObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1, rootMargin: '0px 0px -100px 0px' });

    slideElements.forEach(el => slideObserver.observe(el));
  });
</script>
